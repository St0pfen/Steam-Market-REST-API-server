{
    "name": "stopfmich/steam-api-php",
    "description": "Professional PHP REST API for Steam Market and Profile data",
    "type": "project",
    "license": "CC-BY-NC-SA-4.0",
    "authors": [
        {
            "name": "StopfMich",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "5.6.2",
        "allyans3/steam-market-api-v2": "4.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) copy('.env.example', '.env');\""
        ]
    }
}