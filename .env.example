# =============================================================================
# STEAM REST API - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the values accordingly

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Steam REST API"
APP_VERSION="1.0.0"
APP_DEBUG=true
APP_BASE_URL="http://localhost:8000"
APP_API_PREFIX="api/v1"
APP_CONTENT_TYPE="application/json"

# =============================================================================
# STEAM API CONFIGURATION
# =============================================================================
# Steam Web API Key (optional, but recommended for extended features)
# Available at: https://steamcommunity.com/dev/apikey
# Required for: Profile friends list, recent games, advanced profile data
STEAM_API_KEY=your_steam_api_key_here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# CORS settings for cross-origin requests
CORS_ALLOW_ORIGIN="*"
CORS_ALLOW_HEADERS="X-Requested-With, Content-Type, Accept, Origin, Authorization"
CORS_ALLOW_METHODS="GET, POST, PUT, DELETE, PATCH, OPTIONS"
PORT=8000